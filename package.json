{
  "publisher": "adonisjs",
  "name": "vscode-edge",
  "displayName": "Edge templates syntax highlighter",
  "version": "1.2.0",
  "description": "Official Edge template engine extension for VSCode",
  "author": "virk",
  "license": "MIT",
  "homepage": "https://edgejs.dev/docs/introduction",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edge-js/edge-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/edge-js/edge-vscode/issues"
  },
  "keywords": [
    "edgejs",
    "edge-template-engine",
    "adonisjs"
  ],
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "main": "./dist/index.js",
  "icon": "./marketplace_icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "workspaceContains:**/*.edge"
  ],
  "contributes": {
    "languages": [
      {
        "id": "edge",
        "aliases": [
          "Edge",
          "edge"
        ],
        "extensions": [
          ".edge"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "edge",
        "scopeName": "text.html.edge",
        "path": "./syntaxes/edge.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.javascript": "javascript"
        }
      }
    ],
    "snippets": [
      {
        "language": "edge",
        "path": "./snippets/edge.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/javascript.json"
      }
    ],
    "configuration": {
      "title": "Edge",
      "properties": {
        "edge.disks": {
          "type": "object",
          "description": "List of disks to be used for resolving the views",
          "default": {
            "default": "resources/views"
          }
        }
      }
    }
  },
  "scripts": {
    "build": "del-cli dist && tsup",
    "dev": "tsup src",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "checks": "npm run lint && npm run typecheck && npm run test",
    "version": "npm run build",
    "test": "c8 ts-node bin/test.ts",
    "quick:test": "ts-node bin/test.ts"
  },
  "devDependencies": {
    "@adonisjs/prettier-config": "^1.1.8",
    "@japa/assert": "^1.4.1",
    "@japa/file-system": "^1.1.0",
    "@japa/runner": "^2.5.1",
    "@japa/snapshot": "^1.0.1-3",
    "@japa/spec-reporter": "^1.3.3",
    "@julr/eslint-config": "^0.3.2",
    "@types/dedent": "^0.7.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "c8": "^8.0.1",
    "change-case": "^4.1.2",
    "dedent": "^0.7.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.42.0",
    "eslint-plugin-perfectionist": "^2.2.0",
    "fast-glob": "^3.3.2",
    "prettier": "^2.8.8",
    "slash": "^3.0.0",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3"
  },
  "prettier": "@adonisjs/prettier-config",
  "eslintConfig": {
    "ignorePatterns": [
      "out",
      "syntaxes",
      "test/fixtures",
      "snippets",
      "schemas"
    ],
    "extends": [
      "@julr/eslint-config-ts",
      "@julr/eslint-config-prettier"
    ]
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "bin",
      "tests/**",
      "test_helpers/**"
    ]
  },
  "pricing": "Free",
  "galleryBanner": {
    "color": "#fff"
  }
}
