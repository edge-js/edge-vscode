{
  "name": "vscode-edge",
  "displayName": "Edge templates syntax highlighter",
  "description": "Official Edge template engine extension for VSCode",
  "version": "1.0.1",
  "scripts": {
    "test": "echo \"no tests\""
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "publisher": "adonisjs",
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "build": "del-cli dist && tsup",
    "dev": "tsup src --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "version": "npm run build",
    "test": "ts-node test/run_pure_tests.ts",
    "quick:test": "ts-node test/run_pure_tests.ts",
    "vscode:prepublish": "npm run build",
    "vscode:package": "vsce package",
    "vscode:publish": "bumpp --commit --push --tag && vsce publish"
  },
  "devDependencies": {
    "@adonisjs/prettier-config": "^1.1.8",
    "@japa/assert": "^1.4.1",
    "@japa/file-system": "^1.1.0",
    "@japa/runner": "^2.5.1",
    "@japa/snapshot": "^1.0.1-3",
    "@japa/spec-reporter": "^1.3.3",
    "@types/dedent": "^0.7.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "dedent": "^0.7.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.42.0",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3"
  },
  "contributes": {
    "languages": [
      {
        "id": "edge",
        "aliases": [
          "Edge",
          "edge"
        ],
        "extensions": [
          ".edge"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "edge",
        "scopeName": "text.html.edge",
        "path": "./syntaxes/edge.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.javascript": "javascript"
        }
      }
    ],
    "snippets": [
      {
        "language": "edge",
        "path": "./snippets/edge.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/javascript.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edge-js/edge-vscode.git"
  },
  "keywords": [
    "edgejs",
    "edge-template-engine",
    "adonisjs"
  ],
  "author": "virk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/edge-js/edge-vscode/issues"
  },
  "homepage": "https://edgejs.dev/docs/introduction",
  "pricing": "Free",
  "galleryBanner": {
    "color": "#fff"
  },
  "icon": "./marketplace_icon.png"
}
